{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": ["error", "never"],
    "no-unused-vars": [
      "warn"
    ],
    "no-prototype-builtins": [
      "off"
    ],
    "no-console": [
      "off"
    ],
    "no-process-exit": [
      "error"
    ],
    "brace-style": [
      "error",
      "1tbs"
    ],
    "consistent-return": [
      "off"
    ],
    "eqeqeq": [
      "error",
      "always"
    ],
    "no-throw-literal": [
      "error"
    ],
    "strict": [
      "error",
      "global"
    ]
  }
}
